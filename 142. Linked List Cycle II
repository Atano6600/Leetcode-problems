/**
 * Definition for singly-linked list.
 * class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) {
 *         val = x;
 *         next = null;
 *     }
 * }
 */
public class Solution {
    public ListNode detectCycle(ListNode head) {
          if (head == null || head.next == null) {
            return null; // No cycle if list is empty or has only one node
        }

        ListNode slow = head;
        ListNode fast = head;

        // Phase 1: Detect if a cycle exists
        while (fast != null && fast.next != null) {
            slow = slow.next;
            fast = fast.next.next;
            if (slow == fast) {
                // Cycle detected
                break;
            }
        }

        // If no cycle is detected in Phase 1
        if (fast == null || fast.next == null) {
            return null;
        }

        // Phase 2: Find the starting node of the cycle
        slow = head; // Reset slow pointer to the head
        while (slow != fast) {
            slow = slow.next;
            fast = fast.next;
        }

        return slow; // Both pointers meet at the start of the cycle
    }
}
